<!-- Header -->
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <!-- Header body -->
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <!-- Title -->
                    <h2 class="h2 text-white d-inline-block mb-0">
                        @NonQueryText 
                        purchase
                    </h2>
                    <input type="hidden" 
                        id="marshallstore-purchase-purchaseid-input" 
                        value="@PurchaseId"/>
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item">
                                <a href="/CMSCore/DashboardIndex">
                                    <i class="fas fa-home"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">
                                    MarshallStore
                                </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:void(0)">
                                    Purchase
                                 </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <i class="@NonQueryIcon"></i>
                            </li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <!-- XL Screens -->
                    <div class="d-none d-xl-inline">
                        <a href="/MarshallStore/PurchaseQueryPage" class="btn btn-secondary">
                            <i class="fas fa-angle-left"></i> Go back
                        </a>
                    </div>
                    <!-- Other Screens -->
                    <div class="d-inline d-sm-inline d-md-inline d-lg-inline d-xl-none">
                        <a href="/MarshallStore/PurchaseQueryPage" class="btn btn-secondary">
                            <i class="fas fa-angle-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
<div class="row">
    <div class="col">
            <!-- Card -->
            <div class="card">
                <!-- Card body -->
                <div class="card-body">
                    <form class="needs-validation" novalidate>
                        <!-- FullPrice -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-fullprice-input" class="form-control-label">
                                <i class="fas fa-divide"></i> FullPrice
                            </label>
                            <input class="form-control" 
                                type="number" 
                                id="marshallstore-purchase-fullprice-input"
                                value="@(Convert.ToDouble(FullPrice))" 
                                min="0" 
                                max="999999000.000000" 
                                step=".01" 
                                pattern="^\d*(\.\d{0,2})?$" 
                                >
                            
                        </div>
                        <!-- FirstName -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-firstname-input" class="form-control-label">
                                <i class="fas fa-font"></i> FirstName
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="300" 
                                type="text" 
                                id="marshallstore-purchase-firstname-input" 
                                value="@FirstName"
                                />
                            
                        </div>
                        <!-- LastName -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-lastname-input" class="form-control-label">
                                <i class="fas fa-font"></i> LastName
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="300" 
                                type="text" 
                                id="marshallstore-purchase-lastname-input" 
                                value="@LastName"
                                />
                            
                        </div>
                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-email-input" class="form-control-label">
                                <i class="fas fa-at"></i> Email
                            </label>
                            <input class="form-control" 
                                type="email" 
                                min="1" 
                                max="370" 
                                id="marshallstore-purchase-email-input" 
                                value="@Email" 
                                />
                            
                        </div>
                        <!-- Phone -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-phone-input" class="form-control-label">
                                <i class="fas fa-phone"></i> 
                                Phone
                            </label>
                            <input class="form-control mt-2" 
                                min="1" 
                                max="500" 
                                type="tel" 
                                id="marshallstore-purchase-phone-input" 
                                value="@Phone" 
                                />
                            
                        </div>
                        <!-- StreetAddress -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-streetaddress-input" class="form-control-label">
                                <i class="fas fa-font"></i> 
                                StreetAddress
                            </label>
                            <textarea class="form-control mt-1" 
                                id="marshallstore-purchase-streetaddress-input" 
                                rows="3" 
                                resize="none" 
                                >
                                    @StreetAddress
                            </textarea>
                            
                        </div>
                        <!-- PostCodeOrZip -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-postcodeorzip-input" class="form-control-label">
                                <i class="fas fa-font"></i> PostCodeOrZip
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="100" 
                                type="text" 
                                id="marshallstore-purchase-postcodeorzip-input" 
                                value="@PostCodeOrZip"
                                />
                            
                        </div>
                        <!-- City -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-city-input" class="form-control-label">
                                <i class="fas fa-font"></i> City
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="300" 
                                type="text" 
                                id="marshallstore-purchase-city-input" 
                                value="@City"
                                />
                            
                        </div>
                        <!-- Country -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-country-input" class="form-control-label">
                                <i class="fas fa-font"></i> Country
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="300" 
                                type="text" 
                                id="marshallstore-purchase-country-input" 
                                value="@Country"
                                />
                            
                        </div>
                        <!-- CardNumber -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-cardnumber-input" class="form-control-label">
                                <i class="fas fa-font"></i> CardNumber
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="50" 
                                type="text" 
                                id="marshallstore-purchase-cardnumber-input" 
                                value="@CardNumber"
                                />
                            
                        </div>
                        <!-- CardHolder -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-cardholder-input" class="form-control-label">
                                <i class="fas fa-font"></i> CardHolder
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="400" 
                                type="text" 
                                id="marshallstore-purchase-cardholder-input" 
                                value="@CardHolder"
                                required/>
                            <div class="invalid-feedback">
                                    This value is required.
                                </div>
                        </div>
                        <!-- Expiration -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-expiration-input" class="form-control-label">
                                <i class="fas fa-font"></i> Expiration
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="10" 
                                type="text" 
                                id="marshallstore-purchase-expiration-input" 
                                value="@Expiration"
                                />
                            
                        </div>
                        <!-- CVC -->
                        <div class="form-group mb-3">
                            <label for="marshallstore-purchase-cvc-input" class="form-control-label">
                                <i class="fas fa-font"></i> CVC
                            </label>
                            <input class="form-control" 
                                min="1" 
                                max="10" 
                                type="text" 
                                id="marshallstore-purchase-cvc-input" 
                                value="@CVC"
                                />
                            
                        </div>
                        
                        <!-- Buttons -->
                        <div class="row justify-content-between">
                            <button class="btn btn-primary text-nowrap ml-3 mt-4" 
                                type="submit">
                                    <i class="@NonQueryIcon"></i> 
                                    @NonQueryText
                            </button>
                            <a href="/MarshallStore/PurchaseQueryPage" 
                                class="btn btn-outline-primary col-auto mr-3 mt-4 text-nowrap">
                                    <i class="fas fa-angle-left"></i> 
                                    Go back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Card footer -->
            <div class="card-footer py-2">
            </div>
        </div>
    </div>
</div>

