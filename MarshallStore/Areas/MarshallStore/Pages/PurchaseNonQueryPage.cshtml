@page
@using MarshallStore.Areas.MarshallStore.Models
@model MarshallStore.Areas.MarshallStore.Pages.PurchaseNonQueryPageModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int PurchaseId;
    decimal FullPrice;
    string FirstName;
    string LastName;
    string Email;
    string Phone;
    string StreetAddress;
    string PostCodeOrZip;
    string City;
    string Country;
    string CardNumber;
    string CardHolder;
    string Expiration;
    string CVC;
    

    if(HttpContext.Request.QueryString.Value.Contains("?PurchaseId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        PurchaseId = 0;
        FullPrice = 0M;
        FirstName = "";
        LastName = "";
        Email = "";
        Phone = "";
        StreetAddress = "";
        PostCodeOrZip = "";
        City = "";
        Country = "";
        CardNumber = "";
        CardHolder = "";
        Expiration = "";
        CVC = "";
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        PurchaseModel PurchaseModel = new PurchaseModel().Select1ByPurchaseIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?PurchaseId=","")));

        PurchaseId = PurchaseModel.PurchaseId;
        FullPrice = PurchaseModel.FullPrice;
        FirstName = PurchaseModel.FirstName;
        LastName = PurchaseModel.LastName;
        Email = PurchaseModel.Email;
        Phone = PurchaseModel.Phone;
        StreetAddress = PurchaseModel.StreetAddress;
        PostCodeOrZip = PurchaseModel.PostCodeOrZip;
        City = PurchaseModel.City;
        Country = PurchaseModel.Country;
        CardNumber = PurchaseModel.CardNumber;
        CardHolder = PurchaseModel.CardHolder;
        Expiration = PurchaseModel.Expiration;
        CVC = PurchaseModel.CVC;
        
    }

