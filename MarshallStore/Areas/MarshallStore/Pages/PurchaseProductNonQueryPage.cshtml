@page
@using MarshallStore.Areas.MarshallStore.Models
@model MarshallStore.Areas.MarshallStore.Pages.PurchaseProductNonQueryPageModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int PurchaseProductId;
    int PurchaseId;
    int ProductId;
    string FirstName = "";
    string LastName = "";
    string Email = "";
    string Phone = "";
    string StreetAddress = "";
    string PostCodeOrZip = "";
    string City = "";
    string Country = "";
    string CardNumber = "";
    string CardHolder = "";
    string Expiration = "";
    string CVC = "";
    string Producer = "";
    string Model = "";
    decimal Price = 0;
    string Description = "";
    string Image1 = "";


    if(HttpContext.Request.QueryString.Value.Contains("?PurchaseProductId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        PurchaseProductId = 0;
        PurchaseId = 0;
        ProductId = 0;
        FirstName = "";
        LastName = "";
        Email = "";
        Phone = "";
        StreetAddress = "";
        PostCodeOrZip = "";
        City = "";
        Country = "";
        CardNumber = "";
        CardHolder = "";
        Expiration = "";
        CVC = "";
        Producer = "";
        Model = "";
        Price = 0;
        Description = "";
        Image1 = "";

    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        PurchaseProductModel PurchaseProductModel = new PurchaseProductModel().Select1ByPurchaseProductIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?PurchaseProductId=","")));

        PurchaseProductId = PurchaseProductModel.PurchaseProductId;
        PurchaseId = PurchaseProductModel.PurchaseId;
        ProductId = PurchaseProductModel.ProductId;
        FirstName = PurchaseProductModel.FirstName;
        LastName = PurchaseProductModel.LastName;
        Email = PurchaseProductModel.Email;
        Phone = PurchaseProductModel.Phone;
        StreetAddress = PurchaseProductModel.StreetAddress;
        PostCodeOrZip = PurchaseProductModel.PostCodeOrZip;
        City = PurchaseProductModel.City;
        Country = PurchaseProductModel.Country;
        CardNumber = PurchaseProductModel.CardNumber;
        CardHolder = PurchaseProductModel.CardHolder;
        Expiration = PurchaseProductModel.Expiration;
        CVC = PurchaseProductModel.CVC;
        Producer = PurchaseProductModel.Producer;
        Model = PurchaseProductModel.Model;
        Price = PurchaseProductModel.Price;
        Description = PurchaseProductModel.Description;
        Image1 = PurchaseProductModel.Image1;
    }

