@page
@using MarshallStore.Areas.Examples.Models
@model MarshallStore.Areas.Examples.Pages.ExampleNonQueryPageModel
@{
    Layout = "_LayoutDashboard";

    string NonQueryText = "";
    string NonQueryIcon = "";

    int ExampleId;
    bool Boolean;
    DateTime DateTime;
    decimal Decimal;
    int Integer;
    string TextBasic;
    string TextEmail;
    string TextFile;
    string TextPassword;
    string TextPhoneNumber;
    string TextTag;
    string TextTextArea;
    string TextTextEditor;
    string TextURL;
    int ForeignKeyDropDown;
    int ForeignKeyOption;
    string TextHexColour;
    TimeSpan Time;
    

    if(HttpContext.Request.QueryString.Value.Contains("?ExampleId=0"))
    {
        NonQueryText = "Add";
        NonQueryIcon = "fas fa-plus";

        ExampleId = 0;
        Boolean = false;
        DateTime = DateTime.Now;
        Decimal = 5.000000M;
        Integer = 5;
        TextBasic = "";
        TextEmail = "";
        TextFile = "";
        TextPassword = "";
        TextPhoneNumber = "";
        TextTag = "";
        TextTextArea = "";
        TextTextEditor = "";
        TextURL = "http://";
        ForeignKeyDropDown = 0;
        ForeignKeyOption = 0;
        TextHexColour = "#FFFFFF";
        Time = TimeSpan.Parse("00:00");
        
    }
    else
    {
        NonQueryText = "Edit";
        NonQueryIcon = "fas fa-pen";

        ExampleModel ExampleModel = new ExampleModel().Select1ByExampleIdToModel
        (Convert.ToInt32(HttpContext.Request.QueryString.Value.Replace("?ExampleId=","")));

        ExampleId = ExampleModel.ExampleId;
        Boolean = ExampleModel.Boolean;
        DateTime = ExampleModel.DateTime;
        Decimal = ExampleModel.Decimal;
        Integer = ExampleModel.Integer;
        TextBasic = ExampleModel.TextBasic;
        TextEmail = ExampleModel.TextEmail;
        TextFile = ExampleModel.TextFile;
        TextPassword = ExampleModel.TextPassword;
        TextPhoneNumber = ExampleModel.TextPhoneNumber;
        TextTag = ExampleModel.TextTag;
        TextTextArea = ExampleModel.TextTextArea;
        TextTextEditor = ExampleModel.TextTextEditor;
        TextURL = ExampleModel.TextURL;
        ForeignKeyDropDown = ExampleModel.ForeignKeyDropDown;
        ForeignKeyOption = ExampleModel.ForeignKeyOption;
        TextHexColour = ExampleModel.TextHexColour;
        Time = ExampleModel.Time;
        
    }

